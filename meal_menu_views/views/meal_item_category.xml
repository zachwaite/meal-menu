<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>

    <record id="action_meal_item_category" model="ir.actions.act_window">
        <field name="name">Meal Item Categories</field>
        <field name="res_model">meal.item.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_meal_item_category_tree" model="ir.ui.view">
        <field name="name">view_meal_item_category_tree</field>
        <field name="model">meal.item.category</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
              <field name="sequence" widget="handle" />
              <field name="name" />
              <field name="description" />
            </tree>
        </field>
    </record>
    
  </data>
</odoo>
